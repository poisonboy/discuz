.body {
  background-color: #ffffff;
  padding: 13px;
  margin: 0;
  border-radius: 0 0 12px 12px;
  position: relative;
}
.bottom {
  background-color: #ffffff;
  padding: 13px;
  margin: 13px;
  border-radius: 12px;
}
.bottom .br {
  height: 6px;
  display: block;
}
.bottom ._blockquote,
.bottom .blockquote {
  font-size: 12px;
  line-height: 14px;
  border-left: 3px solid #78C0A8;
