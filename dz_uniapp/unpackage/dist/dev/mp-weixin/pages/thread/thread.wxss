  padding: 4px 8px;
  background-color: #f7f7f7;
}
.bottom ._blockquote text,
.bottom .blockquote text {
  display: block;
}
.bottom ._blockquote::before,
.bottom .blockquote::before {
  content: "“";
  color: #78C0A8;
