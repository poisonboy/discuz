/* 颜色变量 */
page {
  background: #f7f7f7;
}
.safearea-bottom {
  width: 100%;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
.emoji {
  width: 22px !important;
  height: 22px !important;
  vertical-align: middle;
}
.tui-header-icon {
  width: 100%;
  position: fixed;
  top: 0;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  height: 32px;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  z-index: 99999;
  box-sizing: border-box;
}
.container {
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
}
.top_follow {
  /* float: right; */
  position: absolute;
  right: 12px;
  top: 20px;
  height: 24px;
  line-height: 24px;
  padding: 0 6px;
  color: #fff;
  font-size: 12px;
  /* margin-top: 3px; */
  border-radius: 30px;
  background: var(--base);
}
.top_box {
  display: block;
  position: absolute;
  top: -40px;
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 1px 10px 0 rgba(31, 38, 135, 0.37);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.18);
  height: 40px;
  width: 600rpx;
  padding: 12px;
  border-radius: 12px;
  overflow: hidden;
}
.top_box .avatar {
  float: left;
  margin-right: 8px;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  background: #f7f7f7;
}
.top_box .avatar .img {
  width: 38px;
  height: 38px;
  border-radius: 50%;
}
.top_box .user {
  display: block;
  height: 18px;
  line-height: 18px;
  padding: 2px 0;
  overflow: hidden;
  white-space: nowrap;
}
.top_box .user .username {
  float: left;
  font-size: 14px;
  color: #333;
}
.top_box .lever {
  font-size: 12px;
  color: #666;
  height: 20px;
  line-height: 20px;
}
.sub-left {
  display: flex;
}
.replybox {
  padding: 0 30rpx;
}
.replybox .rtitle {
  color: #000;
  font-weight: bold;
}
.replybox .textarea {
  margin-top: 15rpx;
}
.replybox .textarea textarea {
  height: 150rpx;
  background: #ededed;
  color: #999;
  border-radius: 10rpx;
  padding: 10rpx;
  width: calc(100% - 20rpx);
}
.replybox .btn {
  background-color: rgba(var(--base-rgb), 1);
  color: #fff;
  margin-top: 20rpx;
}
.card {
  margin: 13px;
  padding: 12px;
  background-color: #fff;
  border-radius: 12px;
}
.container {
  padding-bottom: 120rpx;
