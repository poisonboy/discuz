/*headlines*/
.nui-rolling-news {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  background: #fff;
}
.nui-rolling-news::after {
  left: 0;
}
.nui-swiper {
  margin-left: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  flex: 1;
}
.nui-swiper-item {
  display: flex;
  align-items: center;
}
.nui-news-item {
  line-height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #555;
}
